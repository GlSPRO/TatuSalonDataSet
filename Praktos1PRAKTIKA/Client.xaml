        <TextBox x:Name="TB_phone_number" HorizontalAlignment="Left" Margin="195,484,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="503" Height="29"/>
        <TextBlock HorizontalAlignment="Left" Margin="73,484,0,0" TextWrapping="Wrap" Text="Номер телефона:" VerticalAlignment="Top" Height="27" Width="96"/>
    </Grid>
</Window>
